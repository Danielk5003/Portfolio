@section scripts {
  @Scripts.Render("~/bundles/app")
}

<div class="page-header">
  <h1>Recipes  Manager</h1>
</div>

<div class="row">

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Recipes</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: recipes">
                    <li>
                        <strong><span data-bind="text: ChefName"></span></strong>: <span data-bind="text: Name"> </span>
                        <small><a href="#" data-bind="click: $parent.getRecipeDetail">Details</a></small>
                        <small><a href="#" data-bind="click: $parent.deleteRecipe">Delete</a></small>
                        <small><a href="#" data-bind="click: $parent.getUpdateDetail">Edit </a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>
    <!-- ko if:detail() -->
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">

                <h2 class="panel-title">Recipe Detail</h2>
            </div>
            <table class="table">
                <tr><td>Recipe Name</td><td data-bind="text: detail().Name"></td></tr>
                <tr><td>Chef Name</td><td data-bind="text: detail().ChefName"></td></tr>
                <tr><td>Serving</td><td data-bind="text: detail().Serves"></td></tr>
                <tr><td>Time</td><td data-bind="text: detail().Time"></td></tr>
                <tr><td>Ingredient</td><td data-bind="text: detail().Ingredient"></td></tr>
                <tr><td>Instruction</td><td data-bind="text: detail().Instruction"></td></tr>
            </table>
        </div>

    </div>

    <!-- /ko -->
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add Recipe</h2>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addRecipe">
                    <div class="form-group">
                        <label for="inputChef" class="col-sm-2 control-label">Chef</label>
                        <div class="col-sm-10">
                            <select data-bind="options:chefs, optionsText: 'Name', value: newRecipe.Chef"></select>
                        </div>
                    </div>

                    <div class="form-group" data-bind="with: newRecipe">
                        <label for="inputTitle" class="col-sm-2 control-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputName" data-bind="value:Name" />
                        </div>

                        <label for="inputServes" class="col-sm-2 control-label">Serving</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="inputServes" data-bind="value:Serves" />
                        </div>

                        <label for="inputTime" class="col-sm-2 control-label">Time</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputTime" data-bind="value:Time" />
                        </div>

                        <label for="inputIngredient" class="col-sm-2 control-label">Ingredients</label>
                        <div class="col-sm-10">
                            <input type="text" step="any" class="form-control" id="inputIngredient" data-bind="value:Ingredient"/>
                        </div>


                        <label for="inputInstruction" class="col-sm-2 control-label">Instruction</label>
                        <div class="col-sm-10">
                            <input type="text" step="any" class="form-control" id="inputInstruction" data-bind="value:Instruction"/>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Update Recipe</h2>
            </div>
            <div class="panel-body">
              
                <form class="form-horizontal" data-bind="submit: applyUpdate">
                    <!-- ko if:update() -->
                    <div class="form-group">
                        <div class="col-sm-12">
                            <label for="inputTitle" class="col-sm-0 control-label">Chef</label>
                            <select data-bind="options:chefs, optionsText: 'Name', value: editRecipe.Chef"></select>
                        </div>

                        <div class="form-group" data-bind="with: editRecipe">
                            <label for="inputTitle" class="col-sm-2 control-label">Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" data-bind="value:Name" />
                            </div>
                            <label for="inputServes" class="col-sm-2 control-label">Serving</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" id="inputServes" data-bind="value: Serves" />
                            </div>

                            <label for="inputTime" class="col-sm-2 control-label">Time</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="inputTime" data-bind="value: Time" />
                            </div>

                            <label for="inputIngredient" class="col-sm-2 control-label">Ingredients</label>
                            <div class="col-sm-10">
                                <input type="text" step="any" class="form-control" id="inputIngredient" data-bind="value:Ingredient" />
                            </div>


                            <label for="inputInstruction" class="col-sm-2 control-label">Instruction</label>
                            <div class="col-sm-10">
                                <input type="text" step="any" class="form-control" id="inputInstruction" data-bind="value: Instruction" />
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Update</button>
                    <!-- /ko -->
                </form>
            </div>
        </div>
    </div>
  
</div>

